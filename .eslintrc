{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": ["standard", "eslint:recommended", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": ["prettier", "jest"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": [
      1,
      {
        "allow": ["info", "warn", "error"]
      }
    ],
    "eol-last": ["error", "always"]
  }
}
